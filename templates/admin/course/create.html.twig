{% extends "admin/base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">Создать Курс</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ url('admin_dashboard_index') }}">Домой</a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ url('admin_course_index') }}">Список курсов</a>
                        </li>
                        <li class="breadcrumb-item active">Создать курс</li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="content-header-right col-md-6 col-12 mb-md-0 mb-2">
        </div>
    </div>

    <div class="content-body"><!-- invoice add wrapper -->
        <div class="invoice-add-wrapper">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-text">
                                <p>Здесь вы можете создать урок. Все уроки поделены на главы. При создании урока выберите существующую главу или создайте новую</p>
                            </div>

                            {{ form_start(form, {attr: {class: 'form form-horizontal'}}) }}
                            <div class="form-body">
                                <h4 class="form-section"><i class="feather icon-user"></i> Создать курс</h4>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control">Название курса</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.title, {attr: {placeholder: 'Название курса'}}) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control">Категория</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.category, {attr: {'class': 'form-control select2', 'data-placeholder': "Выберите категорию"}}) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control">Описание</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.description, {attr: {placeholder: 'Описание...'}}) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <button data-repeater-create class="btn btn-primary mt-1 pull-right" type="submit"><i class="fa fa-rocket"></i> Обновить</button>
                                    </div>
                                </div>

                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('admin/vendors/js/forms/repeater/jquery.repeater.min.js') }}"></script>
<script src="{{ asset('admin/vendors/js/forms/toggle/switchery.min.js') }}"></script>
{% endblock %}