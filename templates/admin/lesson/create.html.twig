{% extends "admin/base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="{{ asset('admin/js/scripts/pages/quill-helper.min.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">Создать урок</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ url('admin_dashboard_index') }}">Домой</a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ url('admin_course_index') }}">Список уроков</a>
                        </li>
                        <li class="breadcrumb-item active">Создать урок</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content-body">
        <div class="invoice-add-wrapper">
            <div class="row">
                <div class="col-xl-12 col-md-8 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-text">
                                <p>При создании урока можете добавить УРЛ видео или аудио материала. Так же загрузить свой. При создании урока укажите главу или создайте новую. </p>
                            </div>
                            {% include('admin/lesson/parts/form_create.html.twig') with  {submit: 'Создать', 'course': course} %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
{{ parent() }}

<script src="{{ asset('admin/js/scripts/pages/quill-helper.min.js') }}"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<script>
(function() {
  quilljs_textarea('.quilljs-textarea', {
  modules: { toolbar: [
      ['bold', 'italic', 'underline'],        // toggled buttons
      [{ 'list': 'ordered'}, { 'list': 'bullet' }],
      [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
      [{ 'color': [] }, { 'background': [] }],          // dropdown with defaults from theme
      [{ 'align': [] }],
  ]},
  theme: 'snow',
  });
})();
</script>

{% endblock %}
