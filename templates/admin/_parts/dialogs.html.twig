{% macro confirm(id, title, href, body='') %}
    <div class="modal fade text-left" id="{{ id }}" tabindex="-1" role="dialog"  aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger white">
                    <h4 class="modal-title">{{ title }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                {{ body }}
                </div>
                <div class="modal-footer">
                    <form action="">
                        <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Закрыть</button>
                    </form>
                    <form action="{{ href }}" method="POST">
                        <button type="submit" href="" class="btn btn-outline-danger">
                            <i class="feather icon-trash"></i> Удалить
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
