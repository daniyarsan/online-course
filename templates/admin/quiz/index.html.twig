{% extends "admin/base.html.twig" %}

{% import 'admin/_parts/dialogs.html.twig' as dialogs %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">Тесты</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ url('admin_dashboard_index') }}">Домой</a></li>
                        <li class="breadcrumb-item"><a href="#">Список Квизов</a></li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="content-header-right col-md-6 col-12 mb-md-0 mb-2 text-right">
            <a class="btn btn-outline-primary" href="{{ url('admin_quiz_create') }}">+</a>
        </div>
    </div>

    <div class="content-body">
        <section class="users-list-wrapper">
            {% include 'admin/quiz/parts/searchForm.html.twig' %}

            <div class="users-list-table">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <!-- datatable start -->
                            <div class="table-responsive">
                                <table id="users-list-datatable" class="table">
                                    <thead>
                                    <tr>
                                        <th>id</th>
                                        <th style="width: 10%;">Название</th>
                                        <th style="width: 20%;">Описание</th>
                                        <th style="width: 10%;">Категория</th>
                                        <th>Для кого...</th>
                                        <th>Создан</th>
                                        <th style="width: 10%;">Действия</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for quiz in data %}
                                        <tr>
                                            <td>{{ quiz.id }}</td>
                                            <td>{{ quiz.title }}</td>
                                            <td>{{ quiz.description }}</td>
                                            <td>{{ quiz.category ? quiz.category.name : ''}}</td>
                                            <td>
                                                {% for department in quiz.departments %}
                                                    <span class="badge badge-default">{{ department.name }}</span>
                                                {% endfor %}
                                            </td>

                                            <td>{{ quiz.createdAt|date('d/m/Y') }}</td>

                                            <td>
                                                <div class="invoice-action">
                                                    <a href="{{ path('admin_quiz_edit', {id: quiz.id}) }}" class="btn btn-success"><i class="feather icon-edit"></i></a>
                                                    <a data-toggle="modal" href="#remove-quiz-{{ quiz.id }}" class="btn btn-danger"><i class="feather icon-trash"></i></a>
                                                    {{ dialogs.confirm('remove-quiz-' ~ quiz.id, 'Удалить', url('admin_quiz_delete', {id: quiz.id}), 'Вы точно хотите удалить квиз?') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <!-- datatable ends -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- users list ends -->
    </div>
{% endblock %}

{% block javascript %}
{{ parent() }}
{% endblock %}