{% extends "admin/base.html.twig" %}
{% import 'admin/_parts/dialogs.html.twig' as dialogs %}

    {% block stylesheets %}
        {{ parent() }}
    {% endblock %}

    {% block content %}
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title mb-0">Результаты требующие оценки</h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ url('admin_dashboard_index') }}">Домой</a></li>
                            <li class="breadcrumb-item"><a href="#">Результаты</a></li>
                        </ol>
                    </div>
                </div>
            </div>

            <div class="content-header-right col-md-6 col-12 mb-md-0 mb-2">
                <div class="btn-group float-md-right" role="group" aria-label="Button group with nested dropdown">
                    <div class="btn-group" role="group">
                        <button class="btn btn-outline-primary dropdown-toggle dropdown-menu-right" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="feather icon-settings icon-left"></i> Опции</button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" href="{{ url('admin_category_create') }}" class="btn btn-primary">Новая категория</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content-body">
            <section class="users-list-wrapper">
                <div class="users-list-table">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="users-list-datatable" class="table">
                                        <thead>
                                        <tr>
                                            <th style="width: 40%;">Название</th>
                                            <th style="width: 30%;">Статус</th>
                                            <th style="width: 10%;">Действия</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for category in data %}
                                            <tr data-category-id="{{ category.id }}">
                                                <td class="align-middle">{{ category.name }}</td>
                                                <td class="align-middle">{{ category.active == 1 ? 'Активна' : 'Неактивна' }}</td>
                                                <td class="align-middle">
                                                    <div class="invoice-action" style="display: flex;justify-content: space-around;">
                                                        <div>
                                                            <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-success"><i class="fa fa-edit"></i></a>
                                                        </div>
                                                        <div>
                                                            <a data-toggle="modal" href="#remove-category-{{ category.id }}" class="btn btn-danger"><i class="fa icon-trash"></i></a>
                                                        </div>
                                                        {{ dialogs.confirm('remove-category-' ~ category.id, 'Удалить', url('admin_category_delete', {id: category.id}), 'Вы точно хотите удалить категорию ' ~ category.name ~ '?') }}
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    {% endblock %}

{% block javascript %}
{{ parent() }}
{% endblock %}